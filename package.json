{
  "name": "rock-buddy",
  "version": "0.4.0-alpha",
  "description": "Rock Buddy",
  "main": "./src/main.js",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && electron .",
    "dev": "npm run build && electron . http://raspberrypi:8080",
    "release": "electron-builder"
  },
  "author": "TNTMusicStudios",
  "license": "MIT",
  "dependencies": {
    "aes-js": "^3.1.2",
    "electron-is-dev": "^2.0.0",
    "electron-store": "^8.1.0",
    "jquery": "^3.6.3",
    "semver": "^7.3.8"
  },
  "devDependencies": {
    "electron": "^23.0.0",
    "electron-builder": "^23.6.0",
    "typescript": "^4.9.5"
  },
  "build": {
    "appId": "com.tntmusicstudios.rock-buddy",
    "productName": "Rock Buddy",
    "icon": "images/icon-256x256.png",
    "target": "nsis",
    "nsis": {
      "oneClick": false
    },
    "directories": {
      "buildResources": "images",
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "images/**/*",
      "src/**/*"
    ],
    "extraFiles": [
      {
        "from": "addons",
        "to": "addons"
      }
    ]
  }
}
