{
    "name": "rock-buddy",
    "version": "1.0.3-beta",
    "description": "Rock Buddy",
    "main": "./src/main.js",
    "scripts": {
        "build": "tsc && webpack --mode=development",
        "start": "npm run build && electron .",
        "dev": "npm run build && electron . http://raspberrypi:8080",
        "release": "npm run build && electron-builder"
    },
    "author": "TNTMusicStudios",
    "license": "MIT",
    "dependencies": {
        "aes-js": "^3.1.2",
        "async-mutex": "^0.4.0",
        "electron-is-dev": "^2.0.0",
        "electron-store": "^8.1.0",
        "semver": "^7.3.8"
    },
    "devDependencies": {
        "electron": "^23.0.0",
        "electron-builder": "^24.0.0",
        "typescript": "^4.9.5",
        "webpack": "^5.76.2",
        "webpack-cli": "^5.0.1"
    },
    "build": {
        "icon": "images/icon-256x256",
        "target": "nsis",
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true
        },
        "directories": {
            "output": "release"
        }
    }
}
